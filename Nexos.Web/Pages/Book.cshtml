@page
@model Nexos.Web.Pages.BookModel
@{
    ViewData["Title"] = "Book";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Year" class="control-label"></label>
                <input asp-for="Book.Year" class="form-control" />
                <span asp-validation-for="Book.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Gender" class="control-label"></label>
                <input asp-for="Book.Gender" class="form-control" />
                <span asp-validation-for="Book.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.NumberPage" class="control-label"></label>
                <input asp-for="Book.NumberPage" class="form-control" />
                <span asp-validation-for="Book.NumberPage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.EditorialId" class="control-label">Editorial</label>
                <select asp-for="Book.EditorialId" class="form-control" asp-items="@Model.EditorialSelect">
                    <option value="" selected disabled>-- Select Editorial --</option>
                </select>
                <span asp-validation-for="Book.EditorialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.AuthorId" class="control-label">Author</label>
                <select asp-for="Book.AuthorId" class="form-control" asp-items="@Model.AuthorSelect">
                    <option value="" selected disabled>-- Select Author --</option>
                </select>
                <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.NumberPage" class="control-label"></label>
                <input asp-for="Book.NumberPage" class="form-control" />
                <span asp-validation-for="Book.NumberPage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
